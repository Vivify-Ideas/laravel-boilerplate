FROM vivifyideas/php-fpm-production-docker-alpine:7.4

COPY ./docker/custom.ini /usr/local/etc/php/conf.d/custom.ini
COPY ./docker/schedule.sh /scripts/schedule.sh

RUN set -ex && \
	cd /home/ && \
	wget https://github.com/Vivify-Ideas/coding-standard-php/archive/v1.0.zip && \
	unzip v1.0.zip -d Standards && \
	cd Standards && \
	mv coding-standard-php-1.0 Vivify && \
	cd ../ && \
	rm v1.0.zip && \
	composer global require "squizlabs/php_codesniffer=3.*"

